<!-- Generates FragmentBeatBox binding class -->
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_main_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_label_seekbar_prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_label_seekbar_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="@string/label_seekbar_prefix"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_playback_speed"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Playback Speed:" />

        <TextView
            android:id="@+id/textView_label_seekbar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_playback_speed"
            app:layout_constraintStart_toEndOf="@+id/textView_label_seekbar_prefix"
            tools:text="51" />

        <TextView
            android:id="@+id/textView_label_seekbar_postfix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/label_seekbar_postfix"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_playback_speed"
            app:layout_constraintStart_toEndOf="@+id/textView_label_seekbar_value"
            tools:text="%" />


        <SeekBar
            android:id="@+id/seekBar_playback_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>




</layout>